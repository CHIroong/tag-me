<aside class="col-4">

  <!-- screenshots -->
  <section class="row">
    <%= link_to screenshots_path do %>
        <svg class="back" width="32" height="32" viewBox="0 0 64 64">
            <path id="arrow-left-2" d="M26.667 10.667q1.104 0 1.885 0.781t0.781 1.885q0 1.125-0.792 1.896l-14.104 14.104h41.563q1.104 0 1.885 0.781t0.781 1.885-0.781 1.885-1.885 0.781h-41.563l14.104 14.104q0.792 0.771 0.792 1.896 0 1.104-0.781 1.885t-1.885 0.781q-1.125 0-1.896-0.771l-18.667-18.667q-0.771-0.813-0.771-1.896t0.771-1.896l18.667-18.667q0.792-0.771 1.896-0.771z"></path>
        </svg>
    <% end %>
    <div class="col-12 px-0">
        <img src="https://dummyimage.com/1080x720/000/fff" alt="screen"> <!-- @screenshot.image -->
    </div>
  </section>

  <!-- choice boxes -->
  <section class="row pt-1">
    <%= render partial: "type_cards", locals: {screenshot: @screenshot} %>
  </section>

</aside>

<main class="col-8">
  <!-- pieces -->
  <section class="row pt-1">
    <% if @screenshot.pieces.count > 0 %>
        <% @screenshot.pieces.each do |p| %>
            <div id="<%= p.id %>" class="piece col-2 mb-1">
                <img src="https://dummyimage.com/64x64/000/fff" alt="piece">
            </div>
        <% end %>
    <% else %>
        <div class="col-12 text-center pt-1">No Pieces.</div>
    <% end %>
  </section>
</main>