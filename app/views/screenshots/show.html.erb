<img id="bg" src="<%= @screenshot.image %>" alt="screenshot">
<div id="canvas" tabindex='1'>
    <% @screenshot.pieces.each do |p| %>
        <div class="rectangle <%= Type.find(p.type_id).color %>" style="left: <%= p.left%>px; top: <%= p.top%>px; width: <%= p.width %>px; height: <%= p.height%>px;">
            <span class="remove"></span>
        </div>
    <% end %>
</div>