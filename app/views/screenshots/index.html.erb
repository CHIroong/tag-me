<aside class="col-4">

  <!-- screenshots -->
  <section class="row pt-1 pl-1">
    <% @screenshots.each do |s| %>
      <%= link_to screenshot_path(s), :class => "col-4 pl-0 mb-1" do %>
        <img src="https://dummyimage.com/1080x720/000/fff" alt="screen">
      <% end %>
    <% end %>
  </section>

  <!-- choice boxes -->
  <section class="row pt-1">
    <%= render partial: "type_cards" %>
  </section>

</aside>

<main class="col-8">
  <!-- pieces -->
  <section class="row pt-1">
    <div class="col-12 pt-1 text-center">
      Please choose a screenshot or type
    </div>
  </section>
</main>